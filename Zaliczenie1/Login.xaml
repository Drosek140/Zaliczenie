<Window x:Class="Zaliczenie1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zaliczenie1"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Margin="50">
        <StackPanel Background="#FFCDC9C9" Margin="-49,-48,-49,-49">
            <Label Content="Login:" HorizontalAlignment="Center" Margin="0 80 0 0" FontFamily="Verdana"/>
            <TextBox Name="UserLogin" Width="150" />

            <Label Content="Hasło:" HorizontalAlignment="Center" FontFamily="Verdana" />
            <PasswordBox Width="150" Name="UserPassword"  MaxLength="64" PasswordChar="#"/>
            <Button Width="100" Content="Zaloguj" Margin="150 150" Click="handleLoginUser"
                    VerticalAlignment="Bottom" HorizontalAlignment="Right" Name="submitBtn" Background="#FF82CA79"  />
        </StackPanel>
    </Grid>
</Window>
